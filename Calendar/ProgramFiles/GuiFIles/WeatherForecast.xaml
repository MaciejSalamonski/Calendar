                     Width="70" 
                     Background="#FF2D2D30" 
                     Foreground="White" 
                     BorderBrush="Black"/>

            <TextBox Name="forecastThirdRowFirstElementTextBox" 
                     Grid.Column="1" 
                     Grid.Row="4"  
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="120" 
                     Background="#FF2D2D30" 
                     Foreground="White" 
                     BorderBrush="Black"/>
            <TextBox Name="forecastThirdRowSecondElementTextBox" 
                     Grid.Column="2" 
                     Grid.Row="4"  
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="80" 
                     Background="#FF2D2D30" 
                     Foreground="White" 
                     BorderBrush="Black"/>
            <TextBox Name="forecastThirdRowThirdElementTextBox" 
                     Grid.Column="3" 
                     Grid.Row="4"  
